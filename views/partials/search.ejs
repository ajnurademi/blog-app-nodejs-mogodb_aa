<div class="searchBar">
	<div class="container">
		<!-- Post method to get the input from the search -->
		<form action="/search" method="POST" class="search__form" role="search">
			<!-- SearchTerm = get the data out of it -->
			<input
				type="search"
				aria-label="Search"
				id="searchInput"
				name="searchTerm"
				placeholder="Search the site..."
			/>
		</form>
		<div id="searchClose">Close</div>
	</div>
</div>
